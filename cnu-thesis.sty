\ProvidesPackage{cnu-thesis}[2025/10/06 CNU APCS Thesis Style]
\RequirePackage[top=1in, bottom=1in, left=1.5in, right=1in]{geometry}
\RequirePackage{setspace}
\doublespacing
\RequirePackage{times}
\RequirePackage{fancyhdr}
\pagestyle{plain}

% Abstract
\newcommand{\apcsabstract}[5]{
\clearpage
\thispagestyle{plain}
\begin{center}
\textbf{ABSTRACT}
\end{center}
\begin{flushleft}
Title of Thesis: #1 \\
Degree Candidate: #2 \\
Degree and Year: Master of Science, #3 \\
Thesis directed by: #4
\end{flushleft}
#5
\blankpage
}

% Title page with committee signatures
\newcommand{\thesistitlepage}[6]{
\clearpage
\thispagestyle{empty}
\begin{center}
#2 \\[3em]
Thesis submitted to the Graduate Faculty of \\
Christopher Newport University in partial \\
fulfillment of the requirements \\
for the degree of \\[1em]
Master of Science \\
#3 \\[3em]
\end{center}
\noindent Approved: \\[2em]
\noindent #4, Chair \hfill \underline{\hspace{2.5in}} \\[2em]
\noindent #5 \hfill \underline{\hspace{2.5in}} \\[2em]
\noindent #6 \hfill \underline{\hspace{2.5in}}
\blankpage
}

% Dedication & Acknowledgements
\newcommand{\dedication}[1]{\chapter*{Dedication} #1 \blankpage}
\newcommand{\acknowledgements}[1]{\chapter*{Acknowledgements} #1 \blankpage}

% Figures and Tables
\newcommand{\cnuFigure}[2]{
\begin{figure}[h]
\centering
#2
\caption{#1}
\end{figure}
}
\newcommand{\cnuTable}[2]{
\begin{table}[h]
\centering
#2
\caption{#1}
\end{table}
}

% Blank page
\newcommand{\blankpage}{\clearpage\thispagestyle{empty}\mbox{}\clearpage}
